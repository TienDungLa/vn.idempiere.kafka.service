<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>vn.idempiere</groupId>
    <artifactId>kafka.service</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <dependencies>
        <!--
        You need to add iDempiere dependencies here.
        iDempiere artifacts are often not in public Maven repositories.
        You may need to install them to your local Maven repository (.m2) manually.
        Example for the base iDempiere dependency:
        -->
        <dependency>
            <groupId>org.idempiere</groupId>
            <artifactId>org.adempiere.base</artifactId>
            <version>12.0.0</version> <!-- Use your iDempiere version -->
            <scope>system</scope>
            <systemPath>${basedir}/path/to/your/org.adempiere.base.jar</systemPath>
        </dependency>
        <!-- Add other necessary dependencies for Kafka, etc. -->
    </dependencies>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
